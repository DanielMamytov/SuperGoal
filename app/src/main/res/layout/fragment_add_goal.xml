<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/add_goal_bg"
    android:fillViewport="true"
    android:paddingTop="20dp"
    tools:context=".presentation.ui.goal.AddGoalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMyGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_extra_bold"
            android:text="@string/my_goals"
            android:textColor="@android:color/white"
            android:textSize="40sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="24dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/photo_container"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-22dp"
                android:background="@drawable/bg_circle_ring"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="12dp"
                android:translationZ="12dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/photo_preview"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_fill"
                    android:contentDescription="@string/add_goal_photo_content_description"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImageView" />

                <ImageView
                    android:id="@+id/photo_placeholder"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_fill"
                    android:scaleType="centerInside"
                    android:src="@drawable/goal_ic" />

                <FrameLayout
                    android:id="@+id/btn_add_photo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="-16dp"
                    android:background="@drawable/bg_badge"
                    android:elevation="14dp"
                    android:foreground="@drawable/ripple_circle"
                    android:translationZ="14dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:padding="6dp"
                        android:src="@drawable/add_ic2" />
                </FrameLayout>
            </FrameLayout>

            <EditText
                android:id="@+id/et_goal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/bg_input_goal"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/hint_goal_name"
                android:imeOptions="actionNext"
                android:includeFontPadding="false"
                android:inputType="textCapSentences|textPersonName"
                android:minHeight="55dp"
                android:paddingStart="20dp"
                android:paddingTop="18dp"
                android:paddingEnd="20dp"
                android:paddingBottom="18dp"
                android:textColor="#E8ECEF"
                android:textColorHint="#9DA3AD"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/et_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_goal"
                android:drawableEnd="@drawable/calendar_ic"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start"
                android:paddingStart="20dp"
                android:paddingTop="18dp"
                android:paddingEnd="20dp"
                android:paddingBottom="18dp"
                android:text="@string/deadline_placeholder"
                android:textAllCaps="false"
                android:textColor="#87FFFFFF"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/sectionCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tvCategoryTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_input_goal"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="start|center_vertical"
                    android:paddingStart="20dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="18dp"
                    android:text="@string/category_placeholder"
                    android:textAllCaps="false"
                    android:textColor="#87FFFFFF"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/panelCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-18dp"
                    android:background="@drawable/bg_dropdown_panel"
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="12dp" />
                </LinearLayout>
            </LinearLayout>

            <!--            <TextView-->
            <!--                android:id="@+id/tvSubGoalsHeader"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="24dp"-->
            <!--                android:fontFamily="@font/poppins_bold"-->
            <!--                android:text="@string/subgoals_header"-->
            <!--                android:textColor="@android:color/white"-->
            <!--                android:textSize="20sp" />-->


            <TextView
                android:id="@+id/tvEmptySubGoals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/add_goal_empty_subgoals"
                android:textColor="#87FFFFFF"
                android:textSize="16sp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSubGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_input_goal"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="@string/add_subgoal"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_input_goal_edit_text"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etSubGoalInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@android:color/transparent"
                    android:hint="Enter subgoal"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:textColor="#E8ECEF"
                    android:textColorHint="#87FFFFFF" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSubGoals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_subgoal" />
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSaveGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_badge_solid"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/save_goal"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvSubGoalWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="50dp"
                android:fontFamily="@font/poppins_regular"
                android:paddingBottom="10dp"
                android:text="@string/toast_add_subgoal_first"
                android:textColor="#F23230"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvFieldsWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="50dp"
                android:fontFamily="@font/poppins_regular"
                android:paddingBottom="10dp"
                android:text="@string/toast_fill_all_fields"
                android:textColor="#F23230"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>

