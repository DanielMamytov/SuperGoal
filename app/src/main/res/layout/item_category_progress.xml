<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_marginTop="15dp"

    android:background="@drawable/bg_bar_track">

    <!-- Левая цветная часть -->
    <View
        android:id="@+id/vLeftFill"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F23230"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineSplit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Guideline для разделения процентов -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineSplit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"/> <!-- динамически меняется в коде -->

    <!-- Левая надпись -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineSplit">

        <TextView
            android:id="@+id/tvLeftPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30%"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Fitness"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

    <!-- Правая надпись -->
    <TextView
        android:id="@+id/tvRightPercent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:paddingEnd="8dp"
        android:text="70%"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintStart_toStartOf="@id/guidelineSplit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
