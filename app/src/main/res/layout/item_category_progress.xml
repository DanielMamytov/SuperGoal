<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="14dp"
    android:background="@drawable/bg_bar_track"
    android:clipToPadding="false">

    <!-- Вертикальная Guideline: процент левого сегмента.
         Процент задаём в коде: glSplit.setGuidePercent(p/100f) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glSplit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>

    <!-- Левый цветной fill -->
    <View
        android:id="@+id/vFill"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/glSplit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_bar_fill_left"/>

    <!-- Контейнер контента слева (поверх fill) -->
    <LinearLayout
        android:id="@+id/leftContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/glSplit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="10dp"
        android:minWidth="88dp"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/tvLeftPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30%"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Fitness"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Правый процент -->
    <TextView
        android:id="@+id/tvRightPercent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glSplit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="end|center_vertical"
        android:paddingEnd="12dp"
        android:text="70%"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>
