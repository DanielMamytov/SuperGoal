<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#17181F"/>
            <corners android:radius="22dp"/>
            <stroke android:width="2dp" android:color="#39393F"/> <!-- чуть ярче при фокусе -->
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#17181F"/>
            <corners android:radius="22dp"/>
            <stroke android:width="2dp" android:color="#39393F"/>
        </shape>
    </item>
</selector>
